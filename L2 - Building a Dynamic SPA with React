<!DOCTYPE html>
<html lang="en">
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Document</title>
	<script crossorigin src="https://cdn.jsdelivr.net/npm/react@18/umd/react.development.js"></script>
  <script crossorigin src="https://cdn.jsdelivr.net/npm/react-dom@18/umd/react-dom.development.js"></script>
</head>
<body>
	<div id="root">
		this is dom heading
	</div>
</body>
<script src="https://cdn.jsdelivr.net/npm/@babel/standalone/babel.min.js"></script>
<script type="text/babel">
  
  let root = ReactDOM.createRoot(document.getElementById("root"))
  const {useState} = React;
  
  function App(){
	const[activePage,setPage] = useState("HOME")
    
	function renderContent(){                
		switch (activePage){
		case "HOME":
			return <div style={{ padding:"10px", backgroundColor: "#e0f7fa"}}>Welcome to HOME</div>
		case "ABOUT":
			return <div style={{backgroundColor: "#e0f7fa"}}>ABOUT US</div>
		case "CONTACT":
			return <div style={{backgroundColor: "#e0f7fa"}}>CONTACT US</div>
			default: return null;
	}
}
    return(
		<div style={{width:"100%",backgroundColor:"black"}}>
			<nav style={{display:"flex",justifyContent:"center",alignItems:"center"}}>
			{["HOME","ABOUT","CONTACT"].map((page)=>(<span key={page} style={{backgroundColor:"brown", padding:"20px", color:"white"}} onClick={()=>setPage(page)}>{page}</span>))}
			</nav>
			{renderContent()}
			</div>			
   )
}
  root.render(<App/>)
</script>
</html>
