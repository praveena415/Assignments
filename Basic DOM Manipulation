<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <ul id="ulid">
        <!-- <li></li>
        <li></li>
        <li></li> -->
    </ul>
    <button type="text" onclick="addItem()">Add Item</button>
</body>
</html>
<script>
    function addItem(){
        let x = document.getElementById('ulid')
        let li = document.createElement('li')
        li.textContent = "New Item"
        let c = x.children.length+1
        x.append(li)
        if(c%2===0){
            li.style.color="red"
            li.style.fontStyle="italic"
        }
        else {
            li.style.color = "blue";
            li.style.fontWeight = "bold";
}



    }
    


</script>
