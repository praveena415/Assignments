<script>
function dispaly() {
    let ul = document.getElementById("list")
    alert(ul.textContent)
    let i2 = document.getElementById("item2")
    let prev = i2.previousElementSibling.textContent
    console.log(prev)
    let after = i2.nextElementSibling.textContent
    console.log(after)
    
}
</script>
