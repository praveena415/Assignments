<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <button type="button" style="background-color: red;" onclick="adding()">Add Paragraph</button>
    <button type="button" style="background-color: aqua;" onclick="removing()">Remove Last Paragraph</button> <br>
    <div id="divid">Hello Mani</div>
</body>
</html>
<script>
    function adding(){
    let p = document.createElement('p')
    p.innerText="This is a new paragraph"
    let div = document.getElementById("divid")
    div.appendChild(p)
}
function removing() {
    let div = document.getElementById("divid");
    if (div.lastChild && div.lastChild.tagName === "P") {
        div.removeChild(div.lastChild);
    }
}

</script>
